<div class="container">
  <h2 class="text-center m-4">New Review Form</h2>

  <%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: 0..5 %>
  <%= f.submit "Submit new restaurant", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Cancel", restaurant_path(@restaurant) %>
</div>