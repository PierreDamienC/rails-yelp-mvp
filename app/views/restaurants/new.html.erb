<div class="container">
  <h2 class="text-center m-4">New Restaurant Form</h2>
  <%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.input :phone_number %>
  <%= f.submit "Submit new restaurant", class: "btn btn-primary" %>
  <% end %>
  <%= link_to "Cancel", restaurants_path %>
</div>